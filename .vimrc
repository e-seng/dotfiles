set nocompatible
set nowrap

" tabs stuff
filetype plugin indent on
set expandtab
set tabstop=2
set shiftwidth=2
set smartindent
set smarttab

" prevent scrolling to the bottom of the screen
set scrolloff=10

" colors please
syntax on
" colorscheme default
colorscheme koehler

" set netrw settings
let g:netrw_liststyle = 3
